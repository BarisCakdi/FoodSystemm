@model Register
@{
    ViewData["Title"] = "Profil Düzenle";
}

<section class="book_section layout_padding text-center">
    <div class="container">
        <h1 style="color: #ffc107;">Profil Düzenle</h1>
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mb-3" role="alert">
                @ViewBag.ErrorMessage
            </div>
        }
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success">
                <strong>@ViewBag.SuccessMessage</strong>
            </div>
        }
        @if (ViewBag.user != null)
        {
            <div class="alert alert-danger mb-3" role="alert">
                @ViewBag.user
            </div>
        }
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="profile-header bg-white p-4 rounded-lg shadow-md text-center">
                    <img src="/uploads/@Model.ImgPath" alt="Profil Fotoğrafı" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                    <h2>@Model.UserName @Model.LastName</h2>
                    <p>Kayıt Tarihi: @Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-3">
                <div class="bg-white p-4 rounded-lg shadow-md mb-4">
                    <h3 class="text-xl font-bold mb-4">İsim Güncelle</h3>
                    <form id="updateForm" action="/UserEdit/@Model.Id" method="post" autocomplete="off">
                        <div class="mb-3">
                            <label for="name" class="block text-gray-700 font-semibold mb-2">Yeni İsim</label>
                            <input required type="text" id="name" name="UserName" class="w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        </div>
                        <input type="hidden" name="UserName" value="@Model.UserName" />
                        <div class="flex items-center justify-between">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-3">
                <div class="bg-white p-4 rounded-lg shadow-md mb-4">
                    <h3 class="text-xl font-bold mb-4">Şifre Güncelle</h3>
                    <form action="/PassEdit/@Model.Id" method="post" autocomplete="off">
                        <div class="mb-3">
                            <label for="Password" class="form-label">Yeni Şifre</label>
                            <input required type="password" id="Password" name="Password" class="form-control">
                        </div>
                        <div class="mb-3">
                            <label for="RepeatPass" class="form-label">Tekrar</label>
                            <input required type="password" id="RepeatPass" name="RepeatPass" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
            <div class="col-md-3">
                <div class="bg-white p-4 rounded-lg shadow-md mb-4">
                    <h3 class="text-xl font-bold mb-4">Profil Fotoğrafı Güncelle</h3>
                    <form action="/FotoEdit/@Model.Id" method="post" enctype="multipart/form-data" autocomplete="off">
                        <div class="mb-3">
                            <label for="photo" class="form-label">Fotoğraf</label>
                            <input required type="file" id="photo" name="Img" accept="image/png, image/jpeg" class="form-control-file">
                        </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
            <div class="col-md-3">
                <div class="bg-white p-4 rounded-lg shadow-md mb-4">
                    <h3 class="text-xl font-bold mb-4">Adresi Güncelle</h3>
                    <form action="/AdresEdit/@Model.Id" method="post" autocomplete="off">
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Adres</label>
                            <textarea required type="text" id="exampleFormControlTextarea1" name="address" rows="3" value="@Model.Address" class="form-control">@Model.Address</textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
