                            <li class="nav-item">
                                <a class="nav-link" href="book.html">İletişim</a>
                            </li>
                        </ul>
                    </div>
                    <div class="user_option">
                        @if (string.IsNullOrEmpty(Context.Session.GetString("username")))
                        {
                            <a class="cart_link" href="/index">
