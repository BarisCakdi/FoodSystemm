                            <a href="/home/Login" class="order_online">
                                Giriş
                            </a>
                            <a href="/home/register" class="order_online">
                                Kayıt
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Profile", "Home", new { username = Context.Session.GetString("username")})" class="order_online">
                                @ViewData["username"]
                            </a>
                            <a href="@Url.Action("Index2", "Sepet")" class="order_online">
                                Sepetiniz
                                <span class="badge bg-dark text-white ms-1 rounded-pill">@ViewBag.SepetUrunSayisi</span>
                            </a>

                            <a href="/home/cikis" class="order_online">
                                Çıkış
                            </a>
                            <a href="/admin/index" class="order_online">
                                Yönetim
                            </a>
                        }
                    </div>
                </nav>
            </div>
        </header>
